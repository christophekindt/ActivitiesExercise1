<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.ckindt.activitiesexercise1.Activity1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/oncreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onCreate() calls: " />

        <TextView
            android:id="@+id/oncreatevalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/onstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onStart() calls: " />

        <TextView
            android:id="@+id/onstartvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/onresume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onResume() calls: " />

        <TextView
            android:id="@+id/onresumevalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/onrestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onRestart() calls: " />

        <TextView
            android:id="@+id/onrestartvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/startActTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Activity Two"/>
    </LinearLayout>
</LinearLayout>
